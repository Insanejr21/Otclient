local paralyze = macro(50, function()
  if g_game.isAttacking() then
      usewith(3165, g_game.getAttackingCreature())
      delay(200)
  end
end)

addIcon("AParalyzeIcon", {item={id=11630, count=1}, text= "Paralyze",}, paralyze)

