    local tile = g_map.getTile(pos())
    if tile then
        for _, item in ipairs(tile:getItems()) do
            if item:isPickupable() then
                g_game.move(item, {x=65535, y=SlotBack, z=0}, item:getCount())
                delay(100)
            end
        end
    end
end)
